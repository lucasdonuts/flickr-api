<%= form_with url: home_path, method: :get, local: true do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_field :user_id, class: "input", placeholder: "Search for Photos by Flickr User ID" %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.submit "Search", class: "button is-info" %>
    </div>
  </div>
<% end %>